@model Library.Models.Reader

@{
    ViewData["Title"] = "Edit";
}

<h4> Создать читателя</h4>
<form asp-controller="Reader" asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"> </div>
    <input type="hidden" asp-for="Id" />
    <div>
        <label asp-for="Name"> </label><br />
        <input type="text" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div>
        <label asp-for="BirthDate" > </label><br />
        <input type="text" asp-for="BirthDate" />
        <span asp-validation-for="BirthDate" class="text-danger"></span>
    </div>
    <input type="submit" value="Save" /> <br />
    <a asp-controller="Reader" asp-action="Index"> Вернуться </a>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
