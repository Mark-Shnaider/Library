@model IEnumerable<Library.Models.Book>
@{
    Layout = "_Layout";
}

@using (Html.BeginForm())
{
    <p>
        Поиск: @Html.TextBox("SearchString")
        <input type="submit" value="Search" />
    </p>
}

<a asp-controller="Book" asp-action="Create"> Создрать книгу</a>
<table class="index">
    <thead>
        <tr>
            <th>Название</th>
            <th>Автор</th>
            <th>Артикул</th>
            <th>Год издания</th>
            <th>Количество экземпляров</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)
        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Author</td>
                <td>@book.Vendor</td>
                <td>@book.PublishDate</td>
                <td>@book.Count</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id">Редактировать</a>
                    <a asp-action="Details" asp-route-id="@book.Id">Подробнее</a>
                    <a asp-action="Delete" asp-route-id="@book.Id">Удалить</a>
                </td>
            </tr>
        }
    </tbody>
</table>